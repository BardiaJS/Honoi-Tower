<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox prefWidth="750" prefHeight="500" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.mainhonoitower.GameController">

    <HBox alignment="CENTER" spacing="10">
        <Label text="Disks Count: "/>
        <TextField text="3" fx:id="disksCountField" editable="false"/>
        <Button text="+" onAction="#btnIncreaseClicked"/>
        <Button text="-" onAction="#btnDecreraseClicked"/>
        <Button text="Start" onAction="#startAnimation"/>
        <Button text="Reset"/>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <VBox alignment="BOTTOM_CENTER" fx:id="rod1" HBox.hgrow="ALWAYS" style="-fx-border-color: black; -fx-border: 2;">


        </VBox>
        <VBox alignment="BOTTOM_CENTER" fx:id="rod2" HBox.hgrow="ALWAYS" style="-fx-border-color: black; -fx-border: 2;" >
        </VBox>
        <VBox alignment="BOTTOM_CENTER" fx:id="rod3" HBox.hgrow="ALWAYS" style="-fx-border-color: black; -fx-border: 2;">

        </VBox>
    </HBox>
</VBox>
